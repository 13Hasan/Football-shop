<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ProKick Jerseys - Football Shirts</title>
  <style>
    /* Sadə stil */
    body { font-family: Arial, sans-serif; margin: 0; background: #f5f5f5; }
    header { background: #2c3e50; color: white; padding: 1em; text-align: center; }
    #searchInput { width: 80%; max-width: 400px; padding: 10px; margin-top: 10px; font-size: 1em; }
    main { padding: 1em; display: flex; flex-wrap: wrap; justify-content: center; gap: 15px; }
    .shirt {
      background: white; border: 1px solid #ddd; border-radius: 10px;
      width: 200px; text-align: center; padding: 10px; box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
    }
    .shirt img { width: 100%; border-radius: 8px; }
    .price { font-weight: bold; color: green; margin: 10px 0; }
    button {
      background: #2c3e50; color: white; border: none; padding: 10px;
      border-radius: 5px; cursor: pointer;
    }
    button:hover { background: #1a2733; }
    aside#cart {
      background: white; padding: 1em; border-top: 2px solid #2c3e50; margin-top: 20px;
      max-width: 400px; margin-left: auto; margin-right: auto;
    }
    #cartItems { list-style: none; padding-left: 0; max-height: 150px; overflow-y: auto; margin-bottom: 10px; }
    form input {
      display: block; width: 95%; margin: 0.5em auto; padding: 10px; font-size: 1em;
    }
    form button {
      display: block; width: 95%; margin: 1em auto 0 auto; padding: 10px;
      background: green; border: none; color: white; font-size: 1em; cursor: pointer; border-radius: 5px;
    }
    form button:hover { background: darkgreen; }
    @media (max-width: 600px) {
      main { flex-direction: column; align-items: center; }
      .shirt { width: 90%; }
    }
  </style>
</head>
<body>

<header>
  <h1>ProKick Jerseys</h1>
  <input type="text" id="searchInput" placeholder="Search: Messi, Ronaldo..." />
</header>

<main id="shirtContainer">

  <!-- Lionel Messi -->
  <div class="shirt" data-name="Lionel Messi" data-team="Argentina">
    <img src="data:image/jpeg;base64,/9j/4AAQSkZJRgABAQAAAQABAAD..." alt="Lionel Messi jersey" />
    <h3>Lionel Messi</h3>
    <p>Argentina</p>
    <p class="price">$10</p>
    <button onclick="addToCart('Lionel Messi', 10)">Add to Cart</button>
  </div>

  <!-- Cristiano Ronaldo -->
  <div class="shirt" data-name="Cristiano Ronaldo" data-team="Portugal">
    <img src="data:image/jpeg;base64,/9j/4AAQSkZJRgABAQEASABIAAD..." alt="Cristiano Ronaldo jersey" />
    <h3>Cristiano Ronaldo</h3>
    <p>Portugal</p>
    <p class="price">$12</p>
    <button onclick="addToCart('Cristiano Ronaldo', 12)">Add to Cart</button>
  </div>

  <!-- Neymar Jr -->
  <div class="shirt" data-name="Neymar Jr" data-team="Brazil">
    <img src="data:image/jpeg;base64,/9j/4AAQSkZJRgABAQEASABIAAD..." alt="Neymar Jr jersey" />
    <h3>Neymar Jr</h3>
    <p>Brazil</p>
    <p class="price">$11</p>
    <button onclick="addToCart('Neymar Jr', 11)">Add to Cart</button>
  </div>

  <!-- Burada qalan 27 futbolçu kartlarını eynilə əlavə edə bilərsən -->

</main>

<aside id="cart">
  <h2>Cart</h2>
  <ul id="cartItems"></ul>
  <p id="totalPrice">Total: $0</p>

  <form id="orderForm">
    <input type="text" placeholder="Name" required />
    <input type="text" placeholder="Address" required />
    <input type="tel" placeholder="Phone" required />
    <button type="submit">Complete Order</button>
  </form>
</aside>

<script>
  // Search functionality
  document.getElementById("searchInput").addEventListener("input", function () {
    const value = this.value.toLowerCase();
    document.querySelectorAll(".shirt").forEach((shirt) => {
      const name = shirt.getAttribute("data-name").toLowerCase();
      const team = shirt.getAttribute("data-team").toLowerCase();
      shirt.style.display = name.includes(value) || team.includes(value) ? "block" : "none";
    });
  });

  // Cart functionality
  let cart = [];
  function addToCart(name, price) {
    cart.push({ name, price });
    updateCart();
  }
  function updateCart() {
    const cartItems = document.getElementById("cartItems");
    const totalPrice = document.getElementById("totalPrice");
    cartItems.innerHTML = "";
    let total = 0;
    cart.forEach((item) => {
      total += item.price;
      const li = document.createElement("li");
      li.textContent = `${item.name} - $${item.price}`;
      cartItems.appendChild(li);
    });
    totalPrice.textContent = `Total: $${total}`;
  }

  // Order form submission
  document.getElementById("orderForm").addEventListener("submit", function (e) {
    e.preventDefault();
    alert("Order received! Thank you.");
    cart = [];
    updateCart();
    this.reset();
  });
</script>

</body>
</html>
